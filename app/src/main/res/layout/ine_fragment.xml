<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="685px"
                android:layout_height="400px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_identificacion">

                <ImageView
                    android:id="@+id/image_person_tv"
                    android:layout_width="165px"
                    android:layout_height="215px"
                    android:layout_marginLeft="55px"
                    android:layout_marginTop="139px"
                    android:scaleType="centerCrop"
                    android:alpha=".5"/>

                <ImageView
                    android:id="@+id/image_person_small_iv"
                    android:layout_width="80px"
                    android:layout_height="100px"
                    android:layout_marginLeft="575px"
                    android:layout_marginTop="160px"
                    android:scaleType="centerCrop"
                    android:alpha=".2"/>

                <TextView
                    android:id="@+id/name_person_tv"
                    android:layout_width="80px"
                    android:layout_height="100px"
                    android:layout_marginLeft="575px"
                    android:layout_marginTop="160px"
                    android:textSize="4dp"
                    android:gravity="center_vertical|right"
                    android:alpha=".4"/>

                <TextView
                    android:id="@+id/fecha_nacimiento_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="578px"
                    android:layout_marginTop="103px"
                    android:fontFamily="serif"
                    android:text="31/05/1993"
                    android:textSize="13px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/sexo_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="638px"
                    android:layout_marginTop="114px"
                    android:fontFamily="serif"
                    android:text="H"
                    android:textSize="13px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/nombres_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="235px"
                    android:layout_marginTop="138px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/apellidos_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="235px"
                    android:layout_marginTop="163px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/domicilio_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="235px"
                    android:layout_marginTop="213px"
                    android:fontFamily="serif"
                    android:maxEms="17"
                    android:maxLines="3"
                    android:textSize="13px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/clave_elector_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="340px"
                    android:layout_marginTop="260px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/curp_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="268px"
                    android:layout_marginTop="284px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/anio_registro_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="558px"
                    android:layout_marginTop="283px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/estado_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="283px"
                    android:layout_marginTop="308px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/localidad_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="299px"
                    android:layout_marginTop="330px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/municipio_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="308px"
                    android:layout_marginLeft="423px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/emision_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="330px"
                    android:layout_marginLeft="412px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/seccion_identificacion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="308px"
                    android:layout_marginLeft="507px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/vigencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="330px"
                    android:layout_marginLeft="511px"
                    android:fontFamily="serif"
                    android:textSize="16px"
                    android:textColor="@android:color/black"/>

            </FrameLayout>

        </RelativeLayout>

    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>